<form action="" id="searchform-invoices" class="search form-inline">
  
  <fieldset class="row">
    
    <div class="span9">
      <label for="search-term">{% trans %}Search term{% endtrans %}:</label>
      <input type="text" name="q" id="search-term" class="span4" />
      
      <label for="search-date-from">{% trans %}From{% endtrans %}:</label>
      <input type="text" name="date-from" id="search-date-from" />
      <script type="text/javascript">
        jQuery(function($){ $('#search-date-from').kendoDatePicker(); });
      </script>
      
      <label for="search-date-to">{% trans %}To{% endtrans %}:</label>
      <input type="text" name="date-to" id="search-date-to" />
      <script type="text/javascript">
        jQuery(function($){ $('#search-date-to').kendoDatePicker(); });
      </script>
    </div>
    
    <div class="span3">
      <div class="btn-toolbar">
        <div class="btn-group">
          <button id="search-submit" type="submit" class="btn btn-primary">{% trans %}Search{% endtrans %}</button>
        </div>
        <div class="btn-group">
          <button id="search-reset" type="reset" class="btn">{% trans %}Reset{% endtrans %}</button>
          <button id="search-advanced" type="button" data-toggle="button" class="btn">
            {% trans %}Advanced{% endtrans %}
            <span class="caret"></span>
          </button>
        </div>
      </div>
    </div>
    
  </fieldset>
    
  <fieldset id="search-secondary" class="row" style="display:none;">
    
    <div class="span12">
      <label for="search-customer">{% trans %}Customer{% endtrans %}:</label>
      <input type="text" name="customer" id="search-customer" class="span4" />
      
      <label for="search-series">{% trans %}Series{% endtrans %}:</label>
      <select name="series" id="search-series" class="span3">
        <option value="1">SA - Type A</option>
        <option value="2">SB - Type B</option>
        <option value="3">SR - Returns</option>
      </select>
    </div>
    
  </fieldset>
  
</form>